// 轮盘

抽奖
/draw
请求方式 post
{
	"bet":"翻倍率 1,10,50,100,500",
	"accessToken":"验证token"
}
{
	"result_code":0,
	"prize":{
		"num":0,
		"type":0,
		"prizeId":0,
		"name":"钻石"
	},
	"result":[3,9]
}

