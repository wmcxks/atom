// 点球
获取用户信息
请求方式 post
getUser
{
	"accessToken":"验证token"
}
{
		"user":{
				"id": "1234",
				"nickName": "昵称",
				"coin": "金币",
				"pcoin": "体验币",
				"diamond": "钻石",
				"icon": "http://192.168.92.181/images/head_icon.jpg",
				"mobilePhone": "137****1663",
				"drawCount": "抽奖次数"
		},
		"result_code": 0,
}

踢球
kick
请求方式 post
{
	"accessToken": "验证token",
	"goalie": "守门员编号",
	"ball":"足球编号",
	"multi":1,
	"power":"力量值",
	"dropX":"落点X值",
	"dropY":"落点Y值",
	"secondOp":"二次操作 1是 0否"
}
{
	result_code: 0,
  prize: {
		num: 0,  //中奖金额
		type: 0  //类型 (金币)
	},
  result: {
		out: true,   //是否出界
		goal: false  //是否进球
	}
}

